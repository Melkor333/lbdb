prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

m_bbdb_query()
{
    if [ -f ${LBDB_BBDB_SCRIPT:=$libdir/lbdb_bbdb_query.el} ]
    then
	form="(progn (require (quote lbdb-bbdb-query) 
		              \"$LBDB_BBDB_SCRIPT\") 
                     (lbdb-bbdb-query \"$@\"))"
	if [ -z "$GNUCLIENT" ]
	then
	    if type gnuclient >/dev/null 2>&1; then
		GNUCLIENT=gnuclient
	    fi
        fi
	if [ $GNUCLIENT == "no" ]; then
	    GNUCLIENT=
	fi
	if [ -n "$GNUCLIENT" ] ; then
	    $GNUCLIENT -batch -eval "t" > /dev/null 2>&1 || GNUCLIENT=
	fi
	if [ -n "$GNUCLIENT" ] ; then
	    $GNUCLIENT -batch -eval "$form" 2> /dev/null  | grep -v '^$'
        else
	    if [ -z "$EMACS" ]
	        then
		if type emacs >/dev/null 2>&1; then
		    EMACS=emacs
		elif type xemacs >/dev/null 2>&1; then
		    EMACS=xemacs
		fi
	    fi
	    if [ -n "$EMACS" ] ; then
	        $EMACS -nw --no-site-file --no-init-file -batch \
	            --eval "$form"  2>/dev/null | grep -v '^$'
	    fi
	fi
    fi
}
