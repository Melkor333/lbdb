m_pgp2_query()
{
    @PGP@ +language=en -kv $1 2>/dev/null \
    | grep '^[^<>]\{32,\} <[^<>@:/ ]*@[^<>@ ]*>[^<>@]*$' \
    | sed -e 's/^.\{30,30\}\(.*\) <\([^:]*\)>.*$/\2	\1	(PGP2)/' \
    | sed -e 's/	\([^	]\{27,27\}\)[^	]*	/	\1...	/'
}
