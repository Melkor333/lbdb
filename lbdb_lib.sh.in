#
# library routines
#

lbdb_hn_sendmail()
{
	sendmail_cf="NONE"
	for p in /etc /etc/mail /etc/sendmail ; do
		if test -f $p/sendmail.cf ; then
			sendmail_cf=$p/sendmail.cf
		 	break;
		fi
	done
	
	if test "x$sendmail_cf" != "xNONE" ; then
		hn="`sed -n -e 's/^DM\(.*\)$/\1/p' $sendmail_cf`"
		if test "x$hn" = x ; then
			hn="`sed -n -e 's/^Dj\(.*\)$/\1/p' $sendmail_cf`"
		fi
	fi
	if test "x$hn" = x ; then
		echo "NONE"
	else
		echo "$hn"
	fi
}


lbdb_hostname()
{
	hn=`lbdb_hn_sendmail`
	if test "x$hn" = "xNONE" ; then
		for i in /etc/HOSTNAME /etc/hostname ; do
			if test -f $i ; then
				hn="`cat $i`"
				break;
			fi
		done
        fi
	echo "$hn"
}
