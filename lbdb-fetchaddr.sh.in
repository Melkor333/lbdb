umask 077

prefix=@prefix@
exec_prefix=@exec_prefix@
dotlock=@DOTLOCK@
fetchaddr=@libdir@/fetchaddr
db=$HOME/.lbdb/m_inmail.list

datefmt=${*:-'%Y-%m-%d %H:%M'}

echo "$datefmt"
exit

if [ ! -f $db ]; then
  dbdir=`dirname $db`
  if [ ! -d $dbdir ]; then
    mkdir -p $dbdir
    if [ ! -d $dbdir ]; then
      echo "Can't create $dbdir" >&2
      exit 1
    fi
  fi
  touch $db
  if [ ! -f $db ]; then
    echo "Can't create $db" >&2
    exit 1
  fi
fi

if ! $dotlock -r 10 -f $db ; then
  echo "Can't lock $db [dotlock returned $rv]." >&2
  exit 1
fi

if $fetchaddr "$datefmt" >> $db ; then
  touch $db.dirty
fi

$dotlock -u $db
