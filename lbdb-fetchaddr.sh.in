umask 077

dotlock=@DOTLOCK@
prefix=@prefix@
exec_prefix=@exec_prefix@
fetchaddr=@libdir@/fetchaddr
db=$HOME/.lbdb/m_inmail

if ! $dotlock -r 10 -f $db ; then
  echo "Can't lock $db [dotlock returned $rv]." >&2
  exit 1
fi

# horrible hack alert - maybe, it's time to switch to perl

$fetchaddr | while read line ; do
  addr=`echo "$line" | cut -f1 -d '	'`
  grep -vi "^$addr	" $db > $db.tmp 2> /dev/null || true
  echo "$line" >> $db.tmp
  mv -f $db.tmp $db
done

$dotlock -u $db
