LBDB_VERSION=@LBDB_VERSION@

umask 077

prefix=@prefix@
exec_prefix=@exec_prefix@
dotlock=@DOTLOCK@
fetchaddr=@libdir@/fetchaddr
munge=@libdir@/munge
db=$HOME/.lbdb/m_inmail.list

if [ ! -f $db.dirty ]; then
    # Nothing to do
    exit 0
fi

if $dotlock -r 10 -f $db
then
  : # okay, do nothing
else
  echo "Can't lock $db [dotlock returned $rv]." >&2
  exit 1
fi

$munge < $db > $db.$$.tmp
mv -f $db.$$.tmp $db
rm -f $db.dirty

$dotlock -u $db
