prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

M_INMAIL_DB=${INMAIL_DB:-$HOME/.lbdb/m_inmail.utf-8}

m_inmail_query()
{
	export SORT_OUTPUT MUNGE_LIMITDATE MUNGE_LIMITCOUNT M_INMAIL_DB
	$libdir/lbdb-munge
	test -f $M_INMAIL_DB  || return
	grep -ia "$@." $M_INMAIL_DB || :
}
