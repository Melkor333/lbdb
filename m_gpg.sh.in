m_gpg_query()
{
    GPG=@GPG@

    if [ -x "$GPG" ]
    then
	$GPG --no-auto-check-trustdb --list-keys --with-colons "$@" 2>/dev/null \
	| grep -a '^\(pub\|uid\):[^re]:\([^:]*:\)\{7,7\}[^<>:]* <[^<>@: ]*@[^<>@: ]*>[^<>@:]*:' \
	| sed -e 's/^\([^:]*:\)\{9,9\}\([^<:]*\) <\([^>:]*\)>.*:.*$/\3	\2	(GnuPG)/' \
	| sed -e 's/	\([^	]\{47,47\}\)[^	]*	/	\1...	/' \
	| grep -ia "$@" || :
    fi
}
